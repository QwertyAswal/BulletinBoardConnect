<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="anchorPane" style="-fx-background-color: #cee;" xmlns="http://javafx.com/javafx/8.0.192" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.BoardController">
   <children>
      <HBox fx:id="hBoxBoard" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" style="-fx-background-color: #a23;">
         <children>
            <VBox fx:id="vBoxNotices" alignment="TOP_CENTER" spacing="3.0">
               <children>
                  <Label text="Notices" />
                  <TableView fx:id="tableViewNotices" />
               </children>
            </VBox>
            <VBox fx:id="vBoxPolls" alignment="TOP_CENTER" spacing="3.0">
               <children>
                  <Label text="Polls" />
                  <TableView fx:id="tableViewPolls" />
               </children>
            </VBox>
            <VBox fx:id="vBoxEvents" alignment="TOP_CENTER" spacing="3.0">
               <children>
                  <Label text="Events" />
                  <TableView fx:id="tableViewEvents" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
