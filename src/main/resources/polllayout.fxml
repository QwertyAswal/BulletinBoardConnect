<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" minWidth="300.0" prefWidth="300.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/8.0.192" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PollController">
   <top>
      
   </top>
   <bottom>
      <Button fx:id="closeButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" opacity="0.75" style="-fx-background-color: #ff0000; -fx-text-fill: #ffffffff; -fx-background-radius: 15; -fx-border-radius: 15;" text="X" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="6.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
   <center>
      <VBox fx:id="vBoxPollText" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="questionText" text="&lt;title&gt;">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <padding>
                  <Insets bottom="8.0" />
               </padding></Label>
            <HBox fx:id="hBox1" alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Region maxHeight="30.0" maxWidth="30.0" minHeight="30.0" minWidth="30.0" style="-fx-background-color: #39ff14;" />
                  <Label fx:id="labelPollOption1" text="Label" />
               </children>
            </HBox>
            <HBox fx:id="hBox2" alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Region maxHeight="30.0" maxWidth="30.0" minHeight="30.0" minWidth="30.0" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: #fada5e;" />
                  <Label fx:id="labelPollOption2" text="Label" />
               </children>
            </HBox>
            <HBox fx:id="hBox3" alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Region maxHeight="30.0" maxWidth="30.0" minHeight="30.0" minWidth="30.0" style="-fx-background-color: #2e77bb;" />
                  <Label fx:id="labelPollOption3" text="Label" />
               </children>
            </HBox>
            <HBox fx:id="hBox4" alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Region maxHeight="30.0" maxWidth="30.0" minHeight="30.0" minWidth="30.0" style="-fx-background-color: #fd6a02;" />
                  <Label fx:id="labelPollOption4" text="Label" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
         </padding>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </center>
   <effect>
      <DropShadow />
   </effect>
   <top>
      <HBox fx:id="hBoxOpinion" prefHeight="30.0" BorderPane.alignment="CENTER">
         <children>
            <Region fx:id="region1" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #39ff14;" />
            <Region fx:id="region2" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #fada5e;" />
            <Region fx:id="region3" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #2e77bb;" />
            <Region fx:id="region4" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #fd6a02;" />
         </children>
      </HBox>
   </top>
</BorderPane>
